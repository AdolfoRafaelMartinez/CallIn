<h1>Editing xaction</h1>

<% form_for(@xaction) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :accnum %><br />
    <%= f.text_field :account_id %>
  </p>
  <p>
    <%= f.label :when %><br />
    <%= f.datetime_select :when %>
  </p>
  <p>
    <%= f.label :what %><br />
    <%= f.text_area :what %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @xaction %> |
<%= link_to 'Back', xactions_path %>
